{
  "name": "@rxts/vue",
  "version": "0.0.0",
  "description": "Make Vue greater with RxTS.",
  "repository": "git@github.com:rx-ts/vue.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:r": "r -e named -f cjs",
    "build:ts": "tsc -b",
    "clean": "rimraf dist packages/*/{lib,*.tsbuildinfo}",
    "docs:build": "vuepress build",
    "docs:dev": "vuepress dev",
    "docs:serve": "serve dist -l 8000",
    "lint": "run-p lint:*",
    "lint:es": "eslint . --cache -f friendly",
    "lint:tsc": "vue-tsc --incremental false --noEmit",
    "prepare": "simple-git-hooks && yarn-deduplicate --strategy fewer || exit 0",
    "prerelease": "yarn build",
    "release": "changeset publish",
    "test": "jest",
    "typecov": "type-coverage"
  },
  "devDependencies": {
    "@1stg/app-config": "^2.3.0",
    "@1stg/lib-config": "^4.0.0",
    "@changesets/changelog-github": "^0.4.0",
    "@changesets/cli": "^2.16.0",
    "@d-ts/vue": "^1.0.0",
    "@types/jest": "^27.0.1",
    "@types/lodash-es": "^4.17.4",
    "@types/node": "^16.7.4",
    "@types/qrcode": "^1.4.1",
    "@vue/test-utils": "^2.0.0-rc.12",
    "@vuepress/plugin-register-components": "^2.0.0-beta.24",
    "lodash-es": "^4.17.21",
    "postcss": "^8.3.6",
    "qrcode": "^1.4.4",
    "qrious": "^4.0.2",
    "rimraf": "^3.0.2",
    "rxjs": "^7.3.0",
    "sass": "^1.38.2",
    "sass-loader": "^12.1.0",
    "serve": "^12.0.0",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "type-coverage": "^2.21.1",
    "typescript": "^4.4.2",
    "vue": "^3.2.6",
    "vue-tsc": "^0.3.0",
    "vuepress": "^2.0.0-beta.24",
    "vuepress-types": "^0.9.4"
  },
  "resolutions": {
    "prettier": "^2.3.2"
  },
  "jest": {
    "collectCoverage": true,
    "preset": "ts-jest"
  },
  "typeCoverage": {
    "atLeast": 100,
    "cache": true,
    "detail": true,
    "ignoreAsAssertion": true,
    "ignoreFiles": [
      "**/lib/**/*.d.ts"
    ],
    "ignoreNonNullAssertion": true,
    "showRelativePath": true,
    "strict": true,
    "update": true
  }
}
